class Solution {
public:
    bool isPalindrome(int x) {
        
        if(x<0)
            return false;
        
        long long num=x;
        
    long long reverse=0, rem;
  while(x!=0)    
  {    
      rem=x%10;      
      reverse=reverse*10+rem;    
      x/=10;   
  
  } 
        
        
        if(reverse==num)
            return true;
        else
            return false;
        
    }
};
